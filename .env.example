# Copy to `.env` (do not commit) and fill in values.

# LLM credentials / endpoints
OPENAI_API_KEY=
# Optional (defaults to OpenAI if unset)
OPENAI_BASE_URL=https://api.openai.com/v1

# Optional: Hugging Face access token for gated models
HF_TOKEN=

# Optional: local fine-tuned model checkpoints (directories)
PEPAGENT_AMP_MODEL_DIR=
PEPAGENT_MIC_MODEL_DIR=

# Optional: where agent tools write intermediate files
PEPAGENT_WORKSPACE_DIR=./pepagent/workspace
